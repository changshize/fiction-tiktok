# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fiction_tiktok
REDIS_URL=redis://localhost:6379

# Environment
ENVIRONMENT=development
DEBUG=true

# AI Service API Keys
OPENAI_API_KEY=your_openai_api_key_here
STABLE_DIFFUSION_API_KEY=your_stable_diffusion_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Social Media API Keys
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here
YOUTUBE_API_KEY=your_youtube_api_key_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# File Storage
UPLOAD_DIR=./data
MAX_FILE_SIZE=100MB

# Video Processing
FFMPEG_PATH=/usr/bin/ffmpeg
VIDEO_QUALITY=high
MAX_VIDEO_DURATION=300

# Novel Scraping
USER_AGENT=Mozilla/5.0 (compatible; FictionTikTok/1.0)
REQUEST_DELAY=1
MAX_CONCURRENT_REQUESTS=5

# Content Generation
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,zh,ja
DEFAULT_VOICE_SPEED=1.0
DEFAULT_VIDEO_RESOLUTION=1080x1920

# Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here
